<%= simple_form_for(resource, html: { class: 'login-form' }, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="text-center">
    <%= f.error_notification %>
    <%= render 'devise/shared/error_messages' %>
  </div>

  <div class="form-inputs">
    <%= f.input :name,
                required: true,
                label: false,
                placeholder: 'Nome',
                autofocus: true,
                input_html: { autocomplete: "name" }%>
    <%= f.input :email,
                required: true,
                autofocus: true,
                label: false,
                placeholder: 'E-mail',
                input_html: { autocomplete: "email" }%>
    <%= f.input :phone,
                required: true,
                autofocus: true,
                label: false,
                placeholder: 'Telefone',
                input_html: { autocomplete: "phone" }%>
    <%= f.input :password,
                required: true,
                label: false,
                placeholder: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation,
                label: false,
                placeholder: 'Confirme sua senha',
                required: true,
                input_html: { autocomplete: "new-password" } %>
  </div>

    <%= render 'devise/shared/button_submit', f: f, text: 'Cadastrar' %>
<% end %>
<div class="form-group d-md-flex">
  <div class="form-group d-md-flex">
    <%= render "devise/shared/links" %>
  </div>
</div>
